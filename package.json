{
    "name": "fullstack-concepts-currency-convertor",
    "version": "1.0.0",
    "description": "Converts currencies supported by the EBC: euri, usd, yen etc.",
    "keywords": [
        "node.js",
        "NodeJS",
        "typescript",
        "currencies",
        "conversion",
        "ECB",
        "currency",
        "convert"
    ],
    "author": "Fullstack Concepts, Paul",
    "homepage": "",
    "license": "MIT",
    "main": "index.js",
    "husky": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "concurrent": false,
        "subTaskConcurrency": 1,
        "linters": {
            ".ts": [
                "typescript-autoformat-test",
                "git-add"
            ]
        }
    },
    "pre-commit": "lint-staged",
    "scripts": {
        "start": "npm run serve",
        "build": "concurrently -k -n \"npm run delete-dist\" \"npm run build-ts\"",
        "serve": "node ./dist/src/index.js",
        "watch": "cross-env NODE_ENV=dev APP_NAME=currency_convertor concurrently  -k -p \"[{name}]\" -n \"npm run delete-dist\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build:prod": "webpack --config webpack.prod.js",
        "serve:prod": "node ./dist/src/index.js",
        "delete-dist": "rimraf -rf ./dist/",
        "watch-node": "nodemon dist/src/index.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "dev": "tsc --watch & nodemon dist",
        "test": "tsc && mocha dist/**/*.spec.js",
        "unit-tests": "nyc mocha -r ts-node/register tests/**/*.spec.ts --timeout=5000 --exit",
        "tsc": "tsc",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "lint": " \"npm run lint-staged\" ",
        "lint-staged": "lint-staged",
        "debug": "npm run build && npm run watch-debug",
        "watch-debug": "set DEBUG=* & cross-env NODE_ENV=dev concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "serve-debug": "nodemon --inspect ./dist/src/index.js"
    },
    "dependencies": {
        "app-root-path": "^2.1.0",
        "body-parser": "^1.18.3",
        "chai": "^4.1.2",
        "compression": "^1.7.3",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "csvtojson": "^2.0.8",
        "debug": "^4.0.1",
        "dotenv": "^6.0.0",
        "express": "^4.14.0",
        "fresh": "^0.5.2",
        "fs-extra": "^7.0.0",
        "growl": "^1.10.0",
        "helmet": "^3.13.0",
        "istanbul": "^0.4.5",
        "mime": "^1.4.1",
        "node-fetch": "^2.2.0",
        "nodemon": "1.11.0",
        "nyc": "^13.0.1",
        "request": "^2.88.0",
        "request-promise": "^4.2.2",
        "rxjs": "^6.3.2",
        "xml-fetch": "^1.1.5",
        "xml2js": "^0.4.19",
        "xml2json-light": "^1.0.6",
        "xmltojson": "^1.3.5"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/compression": "0.0.35",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.4",
        "@types/csvtojson": "^1.1.5",
        "@types/debug": "0.0.30",
        "@types/dotenv": "^4.0.2",
        "@types/express": "^4.11.1",
        "@types/fs-extra": "^5.0.1",
        "@types/helmet": "0.0.37",
        "@types/mocha": "^2.2.41",
        "@types/node": "^9.4.6",
        "@types/node-fetch": "^2.1.2",
        "@types/request-promise": "^4.1.42",
        "@types/xml2json": "^0.10.0",
        "@types/xmltojson": "0.0.28",
        "concurrently": "^3.5.1",
        "cross-env": "^5.2.0",
        "eslint": "4.0.0",
        "eslint-config-airbnb-base": "11.2.0",
        "eslint-plugin-import": "2.3.0",
        "eslint-plugin-promise": "3.5.0",
        "husky": "^1.0.0",
        "lint-staged": "^7.3.0",
        "mocha": "^3.4.2",
        "supertest": "3.0.0",
        "ts-node": "^5.0.0",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2"
    }
}
